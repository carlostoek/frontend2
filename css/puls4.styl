azul = #22BCE0
gris_oscuro = #444
naranja = #DD4F24
body
	background #E8E8E8
	color gris_oscuro
	font-family arial
	font-size 16px

header
	background gris_oscuro
	color white
	overflow hidden
	padding 0.5em
	position relative

	.logo
		border-right 1px solid azul
		width 60px
		
		img
			width 52px

	.titular
		margin 0 60px 0 70px

		.filtro
			color azul
			font-size 14px
			font-weight bold
			font-style italic
			text-decoration none
		
		.publicar
			background naranja
			color white
			font-style italic
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black


		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	
	.usuario
		position absolute
		right 10px
		top 10px

		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2
			img
				border-radius 50%
				width 50px;

		.flechita
			background naranja
			color white
			display block
			padding 3px
			position absolute
			right 0px
			text-align right
			top 15px
			width 50%

nav
	background azul

	.menu
		height 50px
		line-height 30px
		margin 0px
		padding 0px
		overflow-x auto
		white-space nowrap

		li 
			display inline-block

			a 
				color white
				display inline-block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none

.left
	float left

.right
	float right